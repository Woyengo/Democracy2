    <answer>
            <table>
                <title></title>
                <tabular top="medium" right="minor" left="minor" bottom="minor">
                    <row header="yes">
                        <cell halign="center"></cell>
                        <cell halign="center">E</cell>
                        <cell halign="center">A</cell>
