    <task>
        <statement>
            <p>
                How many votes would be required to win a <em>majority</em> in this election?
            </p>
        </statement>
        <answer>
            <p>
                <m>7</m>  votes
            </p>
        </answer>
    </task>
    <task>
        <statement>
            <p>
                Find the winner of an election held using each of the following voting schemes. (If it is a tie, say who tied.)
                <ol marker="(i) ">
                    <li>
                        <p>
                            Find the winner using plurality with elimination. 
                        </p>
                    </li>
                    <li>
                        <p>
                            Find the winner using pairwise comparison.
                        </p>
                    </li>
                </ol>
            </p>
        </statement>
        <answer>
            <p>
                <ol marker="(i) ">
                    <li>
                        <p>
                            C.
                        </p>
                    </li>
                    <li>
                        <p>
                            B.
                        </p>
                    </li>
                </ol>
            </p>
        </answer>
    </task>
